[diff]
	tool = nvimdiff
  guitool = bc4
  colorMoved = default
[difftool]
	prompt = false
[difftool "bc4"]
	trustExitCode = true
[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
  trustExitCode = true

[merge]
  tool = nfugitive
	guitool = bc4
	keepbackup = false
[mergetool "nvimdiff4"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nfugitive"]
	cmd = nvim -f -c "Gdiff" "$MERGED"
[mergetool "smerge"]
        cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
        trustExitCode = true
[color]
        ui = true
[protocol]
        version = 2
